<!DOCTYPE html>
<html>
<head>
  <title>Suppliers</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">
  <h1 class="mb-4">Danh sách Nhà Cung Cấp</h1>
  <a href="/suppliers/add" class="btn btn-primary mb-3">Thêm mới</a>
  <table class="table table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Tên</th>
        <th>Địa chỉ</th>
        <th>Điện thoại</th>
        <th>Hành động</th>
      </tr>
    </thead>
    <tbody>
      <% suppliers.forEach(s => { %>
        <tr>
          <td><%= s.name %></td>
          <td><%= s.address %></td>
          <td><%= s.phone %></td>
          <td>
            <a href="/suppliers/edit/<%= s._id %>" class="btn btn-warning btn-sm">Sửa</a>
            <a href="/suppliers/delete/<%= s._id %>" class="btn btn-danger btn-sm">Xóa</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
